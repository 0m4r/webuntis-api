{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "npmScope": "webuntis-api",
  "defaultBase": "main",
  "workspaceLayout": {
    "appsDir": "apps",
    "libsDir": "packages"
  },
  "tui": {
    "autoExit": true
  },
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx/tasks-runners/default",
      "options": {
        "cacheableOperations": ["build", "test", "generate"]
      }
    }
  },
  "targetDefaults": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["{projectRoot}/dist"]
    },
    "test": {
      "dependsOn": ["^build"]
    },
    "generate": {
      "dependsOn": ["^build"],
      "outputs": ["{projectRoot}"]
    },
    "nx-release-publish": {
      "options": {
        "registry": "https://npm.pkg.github.com",
        "tag": "latest"
      }
    }
  },
  "release": {
    "projects": ["packages/*", "apps/*"],
    "projectsRelationship": "fixed",
    "releaseTag": {
      "pattern": "v{version}",
      "requireSemver": true,
      "checkAllBranchesWhen": ["main", "release/*"]
    },
    "version": {
      "git": {
        "stageChanges": true,
        "commit": true,
        "commitMessage": "chore(release): v{version}",
        "tag": true
      }
    },
    "changelog": {
      "workspaceChangelog": true,
      "projectChangelogs": false,
      "git": {
        "stageChanges": true,
        "commit": true,
        "commitMessage": "chore(changelog): v{version}",
        "tag": false
      }
    }
  }
}
