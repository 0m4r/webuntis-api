{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "npmScope": "webuntis-api",
  "defaultBase": "main",
  "workspaceLayout": {
    "appsDir": "apps",
    "libsDir": "packages"
  },
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx/tasks-runners/default",
      "options": {
        "cacheableOperations": ["build", "test", "generate"]
      }
    }
  },
  "targetDefaults": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["{projectRoot}/dist"]
    },
    "test": {
      "dependsOn": ["^build"]
    },
    "generate": {
      "dependsOn": ["^build"],
      "outputs": ["{projectRoot}"]
    }
  }
}
